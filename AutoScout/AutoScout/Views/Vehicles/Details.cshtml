@model AutoScout.Models.Vehicle
@using AutoScout.Controllers;

@*By: Evan Bauer & Ryan Mazzocco
     December 2016
    Vehicles/Details.cshtml*@

@{
    ViewBag.Title = "Details";

    var vehiclesController = new VehiclesController();
    //will return a list an array of the image byte arrays formatted to base64 strings to be rendered as images in the browser
    var imageBase64Strings = vehiclesController.GetVehicleImagesBase64String(Model.Id).ToArray();

    var dealershipName = ViewBag.DealershipName;
    var dealershipPhoneNumber = ViewBag.DealershipPhoneNumber;
    var dealershipCity = ViewBag.DealershipCity;
    var dealershipState = ViewBag.DealershipState;
    var dealershipZipCode = ViewBag.DealershipZipCode;
    var dealershipEmail = ViewBag.DealershipEmail;
}



<div class="container-fluid">

    <h2>Details</h2>
    <h4>@ViewBag.stringDescription</h4>
    <hr />

    <div class="row">
        <!-- Carousel of current vehicle images -->
        <div class="col-md-8">
            @if(imageBase64Strings.Length > 1)
            {
                <div id="carousel-generic" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @* Using the array of images for the vehicle, populate the carousel buttons *@
                        @for (var i = 0; i < imageBase64Strings.Count(); ++i)
                        {
                            var activeClass = "active";
                            if (i > 0)
                            {
                                activeClass = "";
                            }
                            <li data-target="#carousel-generic" data-slide-to="@i" class="@activeClass"></li>
                        }
                    
                    </ol>
                <div class="carousel-inner" role="listbox">
                    @* Using the array of images for the vehicle, dynamically populate the carousel image items*@
                    @for (var i = 0; i < imageBase64Strings.Count(); ++i)
                    {
                        var itemNumber = i + 1;
                        var activeClass = "active";
                        if (i > 0)
                        {
                            activeClass = "";
                        }
                        <div class="item @activeClass ">
                            <img src="data:image/png;base64,@imageBase64Strings[i]" alt="slide @itemNumber">
                        </div>
                    }
                </div>
                <a class="left carousel-control" href="#carousel-generic" role="button" data-slide="prev">
                    <span class="icon-prev" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-generic" role="button" data-slide="next">
                    <span class="icon-next" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            }else
            {
                
                <img class="center-block text-center img-responsive" src="data:image/png;base64,@imageBase64Strings[0]" alt="Image" />
            }

            <br />
            <div class="panel panel-primary">
                <div class="panel-heading">
                    @dealershipName
                </div>
                <ul class="list-group">
                    <li class="list-group-item">
                        <h5><strong>Phone Number</strong></h5> <h5>@dealershipPhoneNumber</h5>
                    </li>

                    <li class="list-group-item">
                        <h5><strong>Email</strong></h5> <h5>@dealershipEmail</h5>
                    </li>

                    <li class="list-group-item">
                        <h5><strong>Location</strong></h5> <h5>@dealershipCity, @dealershipState @dealershipZipCode</h5>
                    </li>
                </ul>
            </div>
            
        </div>
        
        <div class="col-md-4">
            <div>
                <button type="button" data-bind="click: RedirectToDealership" class="btn btn-default width-100"><span class="glyphicon glyphicon-user"></span> View Dealership Page</button>
            </div>
            <br />
            <!-- List of current vehicle detailed info -->
            <div class="panel panel-default">
                <div class="panel-heading">@ViewBag.stringDescription</div>
                <div class="panel-body">
                    <h5 class="price"><strong>Price</strong></h5> <h5 class="price">$@Html.DisplayFor(model => model.Price)</h5>
                </div>
                <ul class="list-group">
                    <li class="list-group-item">
                        <h5><strong>VIN</strong></h5> <h5>@Model.VIN</h5>
                    </li>

                    <li class="list-group-item">
                        <h5><strong>Mileage</strong></h5> <h5>@Model.Mileage</h5>
                    </li>

                    <li class="list-group-item">
                        <h5><strong>Transmission</strong></h5> <h5>@Model.Transmission</h5>
                    </li>

                    <li class="list-group-item">
                        <h5><strong>Exterior Color</strong></h5> <h5>@Model.ExteriorColor</h5>
                    </li>

                    <li class="list-group-item">
                        <h5><strong>Interior Color</strong></h5> <h5>@Model.InteriorColor</h5>
                    </li>

                    <li class="list-group-item">
                        <h5><strong>Style</strong></h5> <h5>@Model.Style</h5>
                    </li>

                    <li class="list-group-item">
                        <h5><strong>Condition</strong></h5> <h5>@Model.Condition</h5>
                    </li>
                    <li class="list-group-item">
                        <h5><strong>Cylinders</strong></h5> <h5>@Model.CylinderNumber</h5>
                    </li>
                   
                </ul>
               
            </div>
        </div>
    </div>
   
    <br />


</div>

<br />
<br />
<p class="bottomLink">
    
    <span class="glyphicon glyphicon-triangle-left"></span> @Html.ActionLink("Back", "Index")
</p>

<script type="text/javascript">

        function VehicleItemViewModel() {
            var self = this;

            self.RedirectToDealership = function () {
                window.location.href = '@Url.Action("Details", "Dealerships", new { id = Model.DealershipId })';
            }
        }
        ko.applyBindings(VehicleItemViewModel);
    </script>