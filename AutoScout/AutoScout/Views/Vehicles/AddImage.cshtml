
@model AutoScout.Models.VehicleImage
@{
    ViewBag.Title = "AddImage";
}


@{
    ViewBag.Title = "AddImage";
}

<h2>Add An Image For Vehicle</h2>

@using (Html.BeginForm("AddImage", "Vehicles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Upload Image for @ViewBag.stringDescription</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <h4>Image</h4>
                <input type="file" id="imageFile" name="imageFile" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div> 
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
}
